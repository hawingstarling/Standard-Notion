generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Document {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  title             String 
  userId            String
  isArchived        Boolean
  parentDocument    Document? @relation(fields: [parentDocumentId], references: [id])
  parentDocumentId  String?   @unique @db.ObjectId
  content           String?
  coverImage        String?
  icon              String?
  isPublished       Boolean

  @@index([userId], name: "by_user")
  @@index([userId, parentDocumentId], name: "by_user_parent")
}
